<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm} %-5level %logger{36} - %msg%n</Pattern>
		</layout>
	</appender>

	<appender name="STDOUT2"
		class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>stdout2 %d{HH:mm} %-5level %logger{36} - %msg%n</Pattern>
		</layout>
	</appender>

	<!-- <appender name="FILE" class="ch.qos.logback.core.FileAppender"> -->
	<!-- <file>e:\log\test.log</file> -->
	<!-- <encoder> -->
	<!-- <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n -->
	<!-- </pattern> -->
	<!-- </encoder> -->
	<!-- </appender> -->


	<!-- development production -->
	<!-- jdbc.connection : WARN WARN -->
	<!-- jdbc.audit : WARN WARN -->
	<!-- jdbc.sqlonly : WARN WARN -->
	<!-- jdbc.sqltiming : INFO WARN -->
	<!-- jdbc.resultset : WARN WARN -->
	<!-- jdbc.resultsettable : INFO WARN -->
	
	<logger name="jdbc.connection" >
        <level value="off"/>
        <appender-ref ref="STDOUT"/>
    </logger>
 
    <logger name="jdbc.audit" additivity="false">
        <level value="off"/>
        <appender-ref ref="STDOUT"/>
    </logger>
 
    <logger name="jdbc.sqlonly" additivity="false">
        <level value="debug"/>
        <appender-ref ref="STDOUT"/>
    </logger>
 
    <logger name="jdbc.sqltiming" additivity="false">
        <level value="off"/>
        <appender-ref ref="STDOUT"/>
    </logger>
 
    <logger name="jdbc.resultset" additivity="false">
        <level value="debug"/>
        <appender-ref ref="STDOUT"/>
    </logger>

	<logger name="kr.or.ddit" additivity="false" level="debug" appender-ref ="STDOUT">
		<appender-ref ref="STDOUT" />
	</logger>

	<!-- <root> -->
	<!-- <appender-ref ref="STDOUT2" /> -->
	<!-- </root> -->
</configuration>
